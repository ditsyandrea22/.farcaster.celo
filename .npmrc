# pnpm configuration
# Allow loose peer dependency resolution for compatibility with React 19
# This is needed because some packages like use-sync-external-store haven't updated their peer dependency constraints yet
peerDependenciesMeta.use-sync-external-store.react.optional=true

# Use workspace packages first
prefer-workspace-packages=true

# Suppress deprecation warnings for @walletconnect/modal (migration planned)
# See: https://docs.reown.com/appkit/upgrade/wcm
# Deprecated packages will be updated when migrating to WalletConnect AppKit v3
suppress-deprecated-warnings=true

# Strict SSL only for non-localhost
strict-ssl=true
